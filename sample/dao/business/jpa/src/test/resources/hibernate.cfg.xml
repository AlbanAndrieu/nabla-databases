<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="connection.url">jdbc:derby:C:\tmp\myDBJpa;create=true;</property>
		<property name="dialect">org.hibernate.dialect.DerbyDialect</property>
		<property name="myeclipse.connection.profile">Local Derby</property>
		<property name="connection.username">user</property>
		<property name="connection.password">user</property>
		<property name="connection.driver_class">org.apache.derby.jdbc.EmbeddedDriver</property>
		<property name="hibernate.default_schema">APP</property>
		<mapping class="org.appfuse.model.User" />
		<mapping class="org.appfuse.model.Role" />
		<mapping class="com.nabla.project.application.database.business.global.model.Person" />
	</session-factory>
</hibernate-configuration>
